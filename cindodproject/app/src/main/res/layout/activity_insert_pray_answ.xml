<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:background="@drawable/insert_pray"
    tools:context=".controller.InsertPrayAnsw">

    <TextView
        android:id="@+id/tv_tgl_doa_insert"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:textColor="@color/colorTextBlack"
        android:gravity="center"
        android:text="Tanggal Kamu Berdoa"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_doa_insert"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/colorTextBlack"
            android:gravity="center"
            android:hint="Isi doa kamu waktu itu "
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:padding="5dp"
        android:id="@+id/tv_tanggal_answ_insert"
        android:layout_margin="5dp"
        android:textColor="@color/colorTextBlack"
        android:gravity="center"
        android:text="Tanggal doa mu di jawab"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:padding="10dp"
            android:id="@+id/et_answ_insert"
            android:layout_margin="5dp"
            android:textColor="@color/colorTextBlack"
            android:gravity="center"
            android:hint="Isi jawabn doa mu"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:text="Simpan"
        android:textColor="@color/colorText"
        android:background="@color/colorApp"
        android:layout_marginTop="10dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>


</LinearLayout>