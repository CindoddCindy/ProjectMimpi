<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_gravity="bottom"
    android:background="@drawable/edit_pray"
    tools:context=".controller.EditActivity">

    <TextView
        android:gravity="center"
        android:id="@+id/write_date_edit"
        android:background="@color/cardview_shadow_end_color"
        android:textColor="@color/colorTextBlack"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textSize="15dp"
        android:hint="Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:gravity="center"
            android:id="@+id/write_pray_edit"
            android:background="@color/cardview_shadow_end_color"
            android:textColor="@color/colorTextBlack"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="15dp"
            android:hint="Edit isi doa "
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/save_pray_edit"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/colorText"
        android:text="Simpan Lagi"
        android:background="@color/colorApp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/batal_pray_edit"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/colorText"
        android:text="Batal"
        android:background="@color/colorApp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>



</LinearLayout>